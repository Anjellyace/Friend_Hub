</head>
<body>

    <nav>
        <div class="nav-left">
            <img src="assets/friendhublogos.png" class="logo">
            <ul>
                <li><img src="assets/notification.png"></li>
                <li><img src="assets/inbox.png"></li>
                <li><img src="assets/video.png"></li>
            </ul>
        </div>
        <div class="nav-right">
            
            <div class="search-box">
                <img src="assets/search.png">
                <input type="text" placeholder="search">
            </div>
            <a href="/profile">
                <div class="nav-user-icon online">
                    <img src="<%= (user && user.profilePic) || '/assets/usericon.png' %>" alt="<%= (user && user.username) || 'User' %>">
                </div>
            </a>
            <a href="/logout" class="logout-btn" title="Logout">
                <img src="assets/logout.png" alt="Logout">
            </a>

        </div>
    </nav>
    
    <div class="container">
        <!---- left sidebar-------->
        <div class="left-sidebar">
            <div class="imp-links">
                <a href="https://www.gmanetwork.com/news/"><img src="assets/news.png"> Latest News</a>
                <a href="https://www.google.com/maps"><img src="assets/following.png"> Following</a>
                <a href="https://ouijaboard.us/"><img src="assets/followers.png"> Followers</a>
                <a href="https://www.lazada.com.ph/#?"><img src="assets/marketplace.png"> Marketplace</a>
                <a href="https://www.youtube.com/"><img src="assets/watch.png"> Watch</a>
                <a href="#">See More</a>
            </div>
            <div class="shortcut-links">
                <p>Your Shortcuts</p>
                <a href="https://github.com/Anjellyace/Friend_Hub"><img src="assets/shortcut-1.jpg"> Github</a>
                <a href="https://classroom.google.com/"><img src="assets/shortcut-2.jpg"> Google Classroom</a>
                <a href="https://docs.google.com/document/d/1L5aYTjyrl1OnxTv4bMqEaWHsK0TElNc5aW-sgrovwLc/edit?tab=t.0"><img src="assets/shortcut-3.jpg"> Documentation</a>
                <a href="https://stackoverflow.com/"><img src="assets/shortcut-4.jpg"> Stack Overflow</a>
            </div>
        </div>
        
        <!-----main-content-------->
        <div class="main-content">
            
            <div class="story-gallery">
                <div class="story story1">
                    <img src="assets/upload.png">
                    <p>Post Story</p>
                </div>
                <div class="story story2">
                    <img src="assets/Jam.png">
                    <p>Jam</p>
                </div>
                <div class="story story3">
                    <img src="assets/Marvin.png">
                    <p>Marvin</p>
                </div>
                <div class="story story4">
                    <img src="assets/AC.png">
                    <p>AC</p>
                </div>
                <div class="story story5">
                    <img src="assets/Angie.png">
                    <p>Angie</p>
                </div>
            </div>
            <div class="write-post-container">
                <div class="user-profile">
                    <img src="<%= (user && user.profilePic) || '/assets/usericon.png' %>" alt="<%= (user && user.username) || 'User' %>">
                    <div>
                        <p><%= (user && user.username) || 'Guest User' %></p>
                        <small>Email: <%= (user && user.email) || 'Not available' %></small>
                    </div>
                </div>
                <div class="post-input-container">
                    <form action="/create-post" method="POST" enctype="multipart/form-data">
                        <textarea rows="3" placeholder="What's on your mind?" name="content"></textarea>
                        <div class="add-post-links">
                            <label for="post-image" class="file-upload">
                                <img src="assets/photo.png" alt="Upload Image">
                                Photo Only
                            </label>
                            <input type="file" id="post-image" name="image" accept="image/*" style="display: none;">
                            <button type="submit" class="create-post-button">Create Post</button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Posts Display Area -->
            <div class="posts-container">
                <% if (typeof posts !== 'undefined' && posts.length > 0) { %>
                    <% posts.forEach(post => { %>
                        <div class="post" data-post-id="<%= post._id %>">
                            <div class="post-header">
                                <div class="post-user">
                                    <img src="assets/usericon.png" alt="User">
                                    <div>
                                        <h3><%= post.username %></h3>
                                        <span class="post-time"><%= post.createdAt %></span>
                                    </div>
                                </div>
                                <% if (user && user.username === post.username) { %>
                                    <div class="post-actions">
                                        <button class="edit-post" onclick="editPost('<%= post._id %>')">
                                            <img src="assets/edit.png" alt="Edit">
                                        </button>
                                        <button class="delete-post" onclick="deletePost('<%= post._id %>')">
                                            <img src="assets/delete.png" alt="Delete">
                                        </button>
                                    </div>
                                <% } %>
                            </div>
                            <div class="post-content">
                                <p class="post-text"><%= post.content %></p>
                                <% if (post.image) { %>
                                    <img src="<%= post.image %>" alt="Post Image" class="post-image">
                                <% } %>
                            </div>
                            <div class="post-footer">
                                <div class="like-comment">
                                    <button class="like-btn" onclick="likePost('<%= post._id %>')">
                                        <img src="assets/like.png" alt="Like">
                                        <span><%= post.likes %> Likes</span>
                                    </button>
                                    <button class="comment-btn" onclick="toggleComments('<%= post._id %>')">
                                        <img src="assets/comment.png" alt="Comment">
                                        <span><%= post.comments.length %> Comments</span>
                                    </button>
                                </div>
                                <div class="comments-section" id="comments-<%= post._id %>" style="display: none;">
                                    <div class="comments-list">
                                        <% post.comments.forEach(comment => { %>
                                            <div class="comment">
                                                <strong><%= comment.username %>:</strong>
                                                <span><%= comment.content %></span>
                                            </div>
                                        <% }) %>
                                    </div>
                                    <form class="comment-form" onsubmit="addComment(event, '<%= post._id %>')">
                                        <input type="text" placeholder="Write a comment..." name="comment">
                                        <button type="submit">Send</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                <% } %>
            </div>

